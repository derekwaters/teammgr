<h1>Register</h1>
<%- include ('./partials/messages') %>

<p>Already have an account? <a href="/users/login">Login Here</a><p>
	
<form action="/users/register" method="POST">
	<div class="mb-3">
		<label for="userNameEdit" class="form-label">Player Name</label>
		<input type="text" class="form-control" id="userNameEdit" name="name" required value="<%= typeof name != 'undefined' ? name : '' %>">
	</div>
	<div class="mb-3">
		<label for="userEmailEdit" class="form-label">Email Address</label>
		<input type="email" class="form-control" id="userEmailEdit" name="email" aria-describedby="emailHelp" required value="<%= typeof email != 'undefined' ? email : '' %>">
		<div id="emailHelp" class="form-text">We won't share your email with anyone else.</div>
	</div>
	<div class="mb-3">
		<label for="userPasswordEdit" class="form-label">Password</label>
		<input type="password" class="form-control" id="userPasswordEdit" name="password" required value="<%= typeof password != 'undefined' ? password : '' %>">
	</div>
	<div class="mb-3">
		<label for="userPassword2Edit" class="form-label">Confirm Password</label>
		<input type="password" class="form-control" id="userPassword2Edit" name="password2" required value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
	</div>
	<div class="mb-3">
		<label for="userBirthdate" class="form-label">Date Of Birth</label>
		<input type="date" class="form-control" id="userBirthdate" name="birthdate" required>
	</div>
	<div class="mb-3">
		<label for="userPhone" class="form-label">Mobile Phone</label>
		<input type="phone" class="form-control" id="userPhone" name="phone" value="<%= typeof phone != 'undefined' ? phone : '' %>">
	</div>

	<div class="card">
		<div class="card-body">
			<h5 class="card-title">Medical Details</h5>
			<p class="card-text">These medical details are recorded for use in a medical emergency only.</p>

			<div class="mb-3">
				<label for="userDoctorName" class="form-label">Doctor's Name</label>
				<input type="text" class="form-control" id="userDoctorName" name="doctorName" value="<%= typeof doctorName != 'undefined' ? doctorName : '' %>">
			</div>
			<div class="mb-3">
				<label for="userDoctorPhone" class="form-label">Doctor's Phone</label>
				<input type="phone" class="form-control" id="userDoctorPhone" name="doctorPhone" value="<%= typeof doctorPhone != 'undefined' ? doctorPhone : '' %>">
			</div>
			<div class="mb-3">
				<label for="userDoctorEmail" class="form-label">Doctor's Email</label>
				<input type="email" class="form-control" id="userDoctorEmail" name="doctorEmail" value="<%= typeof doctorEmail != 'undefined' ? doctorEmail : '' %>">
			</div>
			<div class="mb-3">
				<label for="userDoctorAddress" class="form-label">Doctor's Address</label>
				<input type="text" class="form-control" id="userDoctorAddress" name="doctorAddress" value="<%= typeof doctorAddress != 'undefined' ? doctorAddress : '' %>">
			</div>
			<div class="mb-3">
				<label for="userAllergies" class="form-label">Allergies</label>
				<input type="text" class="form-control" id="userAllergies" name="allergies" value="<%= typeof allergies != 'undefined' ? allergies : '' %>">
			</div>
			<div class="mb-3">
				<label for="userOtherMedicalNotes" class="form-label">Other Medical Info</label>
				<input type="text" class="form-control" id="userOtherMedicalNotes" name="medicalNotes" value="<%= typeof medicalNotes != 'undefined' ? medicalNotes : '' %>">
			</div>
		</div>
	</div>
	<button type="submit" class="btn btn-primary">
		Register
	</button>
</form>
